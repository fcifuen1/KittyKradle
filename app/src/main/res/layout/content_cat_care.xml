<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CatCareActivity"
    tools:showIn="@layout/activity_cat_care">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/catCareLabel"
                android:text="cat care."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/pink"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- THE FIRST BUTTON, THE SAFETY BUTTON -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/safetyQuestion"
                    android:text="keeping cats safe"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/blue" />
                <ImageButton
                    android:id="@+id/safetyButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:background="#0000"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_grey_right"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <TextView
                android:id="@+id/safetyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:textSize="20dp"
                android:textColor="@color/darkGray" />

            <!-- THE SECOND BUTTON, THE FEEDING BUTTON -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/feedingQuestion"
                    android:text="feeding your cat"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/blue"/>
                <ImageButton
                    android:id="@+id/feedingButton"
                    android:src="@drawable/arrow_grey_right"
                    android:background="#0000"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/feedingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:textSize="20dp"
                android:textColor="@color/darkGray"
                />

            <!-- THE THIRD BUTTON, THE HEALTHY BUTTON -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/healthyQuestion"
                    android:text="staying healthy"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/blue"/>
                <ImageButton
                    android:id="@+id/healthyButton"
                    android:src="@drawable/arrow_grey_right"
                    android:background="#0000"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/healthyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:textSize="20dp"
                android:textColor="@color/darkGray"
                />

            <!-- THE FOURTH BUTTON, THE LITTERBOX QUESTION -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/litterboxQuestion"
                    android:text="litter box 101"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/blue"/>
                <ImageButton
                    android:id="@+id/litterboxButton"
                    android:src="@drawable/arrow_grey_right"
                    android:background="#0000"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/litterboxText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:textSize="20dp"
                android:textColor="@color/darkGray"
                />

            <!-- THE FIFTH BUTTON, THE TRAINING BUTTON -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/trainingQuestion"
                    android:text="training your cat"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/blue"/>
                <ImageButton
                    android:id="@+id/trainingButton"
                    android:src="@drawable/arrow_grey_right"
                    android:background="#0000"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/trainingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:textSize="20dp"
                android:textColor="@color/darkGray"
                />

            <!-- the post-catcare contact us stuff -->

            <TextView
                android:id="@+id/contactText"
                android:text="any other questions?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/contactButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contact us"
                android:textAllCaps="false"
                android:background="@drawable/pinkbutton"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>